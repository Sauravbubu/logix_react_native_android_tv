<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/blue_black">

    <TextView
        android:id="@+id/exitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exitDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/exit_des"
        android:text="@string/exit_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exitText" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="@dimen/_120dp"
        android:layout_height="@dimen/_35dp"
        style="@style/ok_btn"
        android:text="@string/ok_btn"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:textColor="@color/blue_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exitDescription" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="@dimen/_120dp"
        android:layout_height="@dimen/_35dp"
        style="@style/back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/okButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>